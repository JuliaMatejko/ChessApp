@model ChessApp.Models.Chess.Game

<div class="modal fade" id="startGame" tabindex="-1" role="dialog" aria-labelledby="startGameModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="startGameModalLabel">Start New Game</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="StartNewGame">    <!--TO DO: Add option: random color -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstPlayerID" class="control-label"></label>
                        <input asp-for="FirstPlayerID" class="form-control" />
                        <span asp-validation-for="FirstPlayerID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SecondPlayerID" class="control-label"></label>
                        <input asp-for="SecondPlayerID" class="form-control" />
                        <span asp-validation-for="SecondPlayerID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Start" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
