@model ChessApp.Models.Chess.Game

<div class="modal fade" id="startGame" tabindex="-1" role="dialog" aria-labelledby="startGameModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h5 class="modal-title" id="startGameModalLabel">Start New Game</h5>
            </div>
            <div class="modal-body">
                <form asp-action="CreateNewGame">    <!--TO DO: Add option: random color -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstPlayerID" class="control-label"></label>
                        <input asp-for="FirstPlayerID" class="form-control" />
                        <span asp-validation-for="FirstPlayerID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SecondPlayerID" class="control-label"></label>
                        <input asp-for="SecondPlayerID" class="form-control" />
                        <span asp-validation-for="SecondPlayerID" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times" style="font-size: x-small; padding-right: 0.5rem;"></i>Close</button>
                        <button type="submit" class="btn btn-success">Play<i class="fas fa-play" style="font-size: x-small; padding-left: 0.5rem;"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
